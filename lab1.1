// Даны два упорядоченных по не возрастанию списка. 
// Объедините их в новый упорядоченный по не возрастанию список

#include <iostream>
#include <list>
using namespace std;

int main() {

	list<int> list1;
	list<int> list2;

	for (int i = 5; i >= 1; --i)
		list1.push_back(i);
	for (int i = 15; i > 3; --i)
		list2.push_back(i);

	cout << "First list\n";
	for (auto it = list1.begin(); it != list1.end(); ++it)
		cout << *it << ' ';
	cout << endl << endl;
	cout << "Second list\n";
	for (auto it = list2.begin(); it != list2.end(); ++it)
		cout << *it << ' ';
	cout << endl << endl;

	list<int> combined;
	int count1 = list1.size();
	int count2 = list2.size();

	for (int i = 0; i < count1; ++i) 
	{
		auto it = list1.begin();
		combined.push_back(*it);
		list1.pop_front();
	}
		
	for (int i = 0; i < count2; ++i)
	{
		auto it = list2.begin();
		combined.push_back(*it);
		list2.pop_front();
	}

	combined.sort();

	cout << "Combined sorted list:\n";
	for (auto it = combined.begin(); it != combined.end(); ++it)
		cout << *it << ' ';
	cout << endl << endl;

	system("pause");
}
